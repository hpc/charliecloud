#!/bin/sh

libexec="$(cd "$(dirname "$0")" && pwd)"
. "${libexec}/base.sh"

# shellcheck disable=SC2034
usage=$(cat <<EOF
Unmount squash filesystem mounted at MOUNTDIR and remove MOUNTDIR.

Usage:

  $ $(basename "$0") MOUNTDIR

EOF
)

parse_basic_args "$@"

if [ "$#" -ne 1 ]; then
    usage
fi

mountdir=$1
if ( fusermount -u "$mountdir" ); then
    rmdir "$mountdir"
    echo "unmounted and removed ${mountdir}"
fi
