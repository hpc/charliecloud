#!/bin/sh

libexec="$(cd "$(dirname "$0")" && pwd)"
. "${libexec}/base.sh"

# shellcheck disable=SC2034
usage=$(cat <<EOF
Convert a Charliecloud tarball image into a Charliecloud SquashFS file.

Usage:

  $ $(basename "$0") TARBALL OUTDIR [ARGS ...]
EOF
)

parse_basic_args "$@"

if [ "$#" -lt 2 ]; then
    usage
fi

image=$1
outdir=$2
shift 2

case $image in
        *.tar)
            imagedir=$(basename "$image" .tar )
            ;;
        *.tar.gz)
            imagedir=$(basename "$image" .tar.gz )
            ;;
        *.tar.xz)
            imagedir=$(basename "$image" .tar.xz)
            ;;
        *.tgz)
            imagedir=$(basename "$image" .tgz )
            ;;
        *)
            echo "unknown extension: ${image}" 1>&2
            exit 1
            ;;
esac
# mktemp is used for intermediate files to avoid heavy metadata loads on
# certain filesystems
temp=$(mktemp -d --tmpdir ch-tar2squash.XXXXXX)
"${ch_bin}/ch-tar2dir" "$image" "$temp"
"${ch_bin}/ch-dir2squash" "${temp}/${imagedir}" "$outdir" "$@"
rm -rf --one-file-system "$temp"
