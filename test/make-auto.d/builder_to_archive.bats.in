@test 'builder to archive %(tag)s' {
    scope %(scope)s
    case $CH_TEST_PACK_FMT in
        squash*)
            ext=sqfs
            ;;
        tar-unpack)
            ext=tar.gz
            ;;
        *)
            false  # unknown format
            ;;
    esac
    archive=${ch_tardir}/%(tag)s.${ext}
    ch-convert -i "$CH_TEST_BUILDER" '%(tag)s' "$archive"
    archive_grep "$archive"
    archive_ok "$archive"
}
