#!/bin/bash
# ch-test-scope: standard

# Generate a flattened image tarball using ch-pull2tar and stage it for
# testing.

set -e

#srcdir=$1  # unused
tarball_gz=${2}.tar.gz
workdir=$3

imgtag=alpine:3.9

if ( ! command -v docker &> /dev/null); then
    echo 'docker not found' 1>&2
    exit 65
fi

cd "$workdir"
ch-pull2tar $imgtag .
mv ${imgtag}.tar.gz "$tarball_gz"
