#!/bin/bash
# ch-test-scope: standard
# ch-test-builder-required: docker

# Generate image directory using ch-pull2dir and stage it for testing.

set -e

#srcdir=$1  # unused
tarball_gz=${2}.tar.gz
workdir=$3

imgtag=alpine:3.9
tag=ch-pull2dir

cd "$workdir"
ch-pull2dir "$imgtag" .
mv $imgtag $tag
tar czf ${tag}.tar.gz $tag
mv ${tag}.tar.gz "$tarball_gz"
