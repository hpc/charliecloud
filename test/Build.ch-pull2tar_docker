#!/bin/bash
# ch-test-scope: standard
# ch-test-builder-include: docker

# Generate a flattened image tarball using ch-pull2tar and stage it for
# testing.

set -e

#srcdir=$1  # unused
tarball_gz=${2}.tar.gz
workdir=$3

imgtag=alpine:3.9

cd "$workdir"
ch-pull2tar $imgtag . --pull-with docker
mv ${imgtag}.tar.gz "$tarball_gz"
